.goods
    display: flex;
    position: absolute;
    top: 174px;
    bottom: 46px;
    width: 100%;
    overflow: hidden;
    .menuWrapper
        flex: 0 0 80px;
        background: #f3f5f7;
        .menuItem
            display: table;
            height: 54px;
            width: 56px;
            padding: 0 12px;
            line-height: 14px;
            border-bottom: 0.075vh solid #e7e7e7
            .text
                display: table-cell;
                width: 56px;
                vertical-align: middle;
                position: relative;
                font-size: 12px;
                .icon
                    display: inline-block;
                    vertical-align: top;
                    width: 12px;
                    height: 12px;
                    margin-right: 2px;
                    background-size: 12px 12px;
                    background-repeat: no-repeat;
                .special
                    background-image: url('assets/img/special1.png')
                .discount
                    background-image: url('assets/img/discount1.png')
        .current
            position: relative;
            z-index: 10;
            margin-top: -1px;
            background: #fff;
            font-weight: 700;
    .foodsWrapper
        flex: 1;
        .foodList
            .title
                padding-left: 14px;
                height: 26px;
                line-height: 26px;
                border-left: 2px solid #d9dde1;
                font-size: 12px;
                color: #93999f;
                background: #f3f5f7;
            .foodItem
                display: flex;
                margin: 18px;
                padding-bottom: 18px;
                position: relative;
                border-bottom: 0.075vh solid #e7e7e7
                .icon
                    flex: 0 0 57px;
                    margin-right: 10px;
                .content
                    flex 1
                    .name
                        margin: 2px 0 8px;
                        height: 14px;
                        line-height: 14px;
                        font-size: 14px;
                        color: #07111b;
                    .desc
                        font-size: 10px;
                        color: #93999f;
                        line-height: 12px;
                        margin-bottom: 8px;
                    .extra
                        line-height: 10px;
                        font-size: 10px;
                        color: #93999f;

                        .count
                            margin-right: 12px;
                    .price
                        line-height: 24px;
                        display: flex
                        align-items: center
                        .now
                            margin-right: 8px;
                            font-size: 14px;
                            color: #f01414;
                        .old
                            text-decoration: line-through;
                            font-size: 10px;
                            color: #93999f;
                    .controlWrap
                        position: absolute;
                        right: 0;
                        bottom: 12px;
                &:last-child
                    margin-bottom 0

                
